<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/txtViewExpression"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="10dp"
        android:textAlignment="textEnd"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@id/txtViewResult"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtViewResult"
        android:text="0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="460dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:textAlignment="textEnd"
        android:textSize="34sp" />



    <Button
        android:id="@+id/btnAC"
        android:text="AC"
        android:layout_width="85dp"
        android:layout_height="75dp"
        android:layout_marginBottom="336dp"
        android:onClick="clearResult"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent" />
    <Button
        android:id="@+id/btnSign"
        android:text="+/-"
        android:layout_width="85dp"
        android:layout_height="75dp"
        android:layout_marginBottom="336dp"
        android:onClick="changeSign"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.35"
        app:layout_constraintStart_toStartOf="parent" />
    <Button
        android:id="@+id/btnErase"
        android:text="@string/erase"
        android:layout_width="85dp"
        android:layout_height="75dp"
        android:layout_marginBottom="336dp"
        android:onClick="eraseChar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.65"
        app:layout_constraintStart_toStartOf="parent" />
    <Button
        android:id="@+id/btnDiv"
        android:text="/"
        android:layout_width="85dp"
        android:layout_height="75dp"
        android:layout_marginBottom="336dp"
        android:onClick="insertDivOperator"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn1"
        android:text="1"
        android:layout_width="85dp"
        android:layout_height="75dp"
        android:layout_marginBottom="256dp"
        android:onClick="addNumber1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent" />
    <Button
        android:id="@+id/btn4"
        android:text="4"
        android:layout_width="85dp"
        android:layout_height="75dp"
        android:layout_marginBottom="176dp"
        android:onClick="addNumber4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent" />
    <Button
        android:id="@+id/btn7"
        android:text="7"
        android:layout_width="85dp"
        android:layout_height="75dp"
        android:layout_marginBottom="96dp"
        android:onClick="addNumber7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn2"
        android:text="2"
        android:layout_width="85dp"
        android:layout_height="75dp"
        android:layout_marginBottom="256dp"
        android:onClick="addNumber2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.35"
        app:layout_constraintStart_toStartOf="parent" />
    <Button
        android:id="@+id/btn5"
        android:text="5"
        android:layout_width="85dp"
        android:layout_height="75dp"
        android:layout_marginBottom="176dp"
        android:onClick="addNumber5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.35"
        app:layout_constraintStart_toStartOf="parent" />
    <Button
        android:id="@+id/btn8"
        android:text="8"
        android:layout_width="85dp"
        android:layout_height="75dp"
        android:layout_marginBottom="96dp"
        android:onClick="addNumber8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.35"
        app:layout_constraintStart_toStartOf="parent" />
    <Button
        android:id="@+id/btn0"
        android:text="0"
        android:layout_width="85dp"
        android:layout_height="75dp"
        android:layout_marginBottom="16dp"
        android:onClick="addNumber0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.35"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="85dp"
        android:layout_height="75dp"
        android:layout_marginBottom="256dp"
        android:text="3"
        android:onClick="addNumber3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.65"
        app:layout_constraintStart_toStartOf="parent" />
    <Button
        android:id="@+id/btn6"
        android:text="6"
        android:layout_width="85dp"
        android:layout_height="75dp"
        android:layout_marginBottom="176dp"
        android:onClick="addNumber6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.65"
        app:layout_constraintStart_toStartOf="parent" />
    <Button
        android:id="@+id/btn9"
        android:text="9"
        android:layout_width="85dp"
        android:layout_height="75dp"
        android:layout_marginBottom="96dp"
        android:onClick="addNumber9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.65"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnPoint"
        android:text="."
        android:layout_width="85dp"
        android:layout_height="75dp"
        android:layout_marginBottom="16dp"
        android:onClick="addNumberPoint"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.65"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnMult"
        android:text="x"
        android:layout_width="85dp"
        android:layout_height="75dp"
        android:layout_marginBottom="256dp"
        android:onClick="insertMultOperator"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent" />
    <Button
        android:id="@+id/btnMinus"
        android:text="-"
        android:layout_width="85dp"
        android:layout_height="75dp"
        android:layout_marginBottom="176dp"
        android:onClick="insertMinusOperator"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent" />
    <Button
        android:id="@+id/btnPlus"
        android:text="+"
        android:layout_width="85dp"
        android:layout_height="75dp"
        android:layout_marginBottom="96dp"
        android:onClick="insertPlusOperator"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent" />
    <Button
        android:id="@+id/btnPerform"
        android:text="="
        android:layout_width="85dp"
        android:layout_height="75dp"
        android:layout_marginBottom="16dp"
        android:onClick="calculateResult"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>